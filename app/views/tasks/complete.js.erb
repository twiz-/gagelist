$("#task-<%= @task.id %>").fadeOut(1000, function() {
  var description = $("#description-<%= @task.id %>").html();
  var list_item = $("<li />").html(description).addClass("new-item");
  
  $("ul#completed").append(list_item)
  
  $("#task-<%= @task.id %>").remove();
});










