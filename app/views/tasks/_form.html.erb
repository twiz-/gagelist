<%= simple_form_for [@list, @task], :remote => true do |form| %>
   <%= form.input :user_id, 
                  collection: active_members(@list), 
                  label_method: :first, 
                  value_method: :last, 
                  as: :radio_buttons,
                  checked: active_members(@list).first,
                  label: 'Assign To:',
                  error: false %>
    <br />
    <%= form.input :description, input_html: {class: 'span4'} %>
    <br>
    <%= form.submit :class => 'btn' %>
    <%= button_tag 'Cancel', :id => 'bt-cancel-task', :class => 'btn', :type => 'button' %>
<% end %>  
