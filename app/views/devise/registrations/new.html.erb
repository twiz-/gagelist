<div class="row nav-under-wrapper">
  <% if !user_signed_in? %>
    <ul class="nav-under-not-home pull-right">
      <li><%= link_to "Home", root_path  %></li>
     <li><%= link_to "What it does", does_path  %></li>
     <li><%= link_to "Benefits of using", benefits_path  %></li>
     <li id="right-link"><%= link_to "What it costs", pricing_path  %></li>
    <% end %>
  </ul>
</div><br>
<h1 style="text-align: center;">Meaningful results are addicting</h1><br>
<div class="row">
  <div class="span3">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>       
      <h5><%= devise_error_messages! %></h5>
    <div class="signup_well span3">
      <legend>Sign up</legend>
      <%= f.text_field :first_name, :placeholder => "First Name" %>
      <%= f.text_field :last_name, :placeholder => "Last Name" %>
      <%= f.text_field :profile_name, :placeholder => "Pick a User Name" %>
      <%= f.email_field :email, :placeholder => "Your Email" %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %><br>
      <%= f.submit "Use for my next project", :class => "btn btn-success" %>
    <% end %>
    <br>
    </div>
    <small class="offset1"><%= render "devise/shared/links" %></small>
    <br>
    <h5 style="margin-left:35px;width:300px; text-align: center;">
      <small>
        By signing up you have read and<br> agree to our <%= link_to "terms", terms_path %> and <%= link_to "privacy policy", terms_path %>.
      </small>
    </h5>
  </div>
  <div class="span6 offset3">
    <div id="signup_gage" style="height:240px; width:300px;">
     <h4 style="text-align:center;"><small>Your 45-day <span style="color: green;"><strong>free</strong></span> trial starts after <br>filling out the form.</small></h4>
  </div>  
</div>
</div>
