<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>One time charge of $<%= REGISTRATION_AMOUNT %>.00</span>
    </label>
  </article>
<span style="margin-left:30px;">
  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= STRIPE_PUBLIC_KEY %>"
          data-description="Continued Full User Access"
          data-amount="<%= REGISTRATION_AMOUNT * 100 %>">
  </script>
</span>  
<% end %>
